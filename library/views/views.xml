<odoo>
  <data>
    <record model="ir.actions.act_window" id="actions_books">
      <field name="name">Books</field>
      <field name="res_model">library.book</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a book
        </p>
      </field>
    </record>

    <record id="actions_library_rentals" model="ir.actions.act_window">
      <field name="name">Rentals</field>
      <field name="res_model">library.rental</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a rental
        </p>
      </field>
    </record>

    <menuitem name='Library' id='menu_library' sequence='1' />
    <menuitem name='Library' id='menu_library_sub' parent='menu_library' sequence='2' />
    <menuitem name='Books'
      id='menu_library_books'
      parent='menu_library_sub'
      sequence='3'
      action='actions_books' />
    <menuitem
      id="library.rental_menu"
      name="Rentals"
      action="actions_library_rentals"
      parent="menu_library_sub"
      sequence="4" />

    <record id="library.book_view_form" model="ir.ui.view">
      <field name="name">library.book.view.form</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <form string="Book">
          <sheet>
            <h1>
              <field name="title" />
            </h1>
            <notebook>
              <page string="Info">
                <group>
                  <field name="author" />
                </group>
                <group>
                  <field name="genre" />
                </group>
                <group>
                  <field name="publisher" />
                </group>
                <group>
                  <field name="published" />
                </group>
                <group>
                  <field name="isbn" />
                </group>
                <group>
                  <field name="summary" />
                </group>
              </page>
              <page string="Notes">
                <group>
                  <field name="notes" />
                </group>
              </page>
              <page string="Rentals">
                <group>
                  <field name="rental_id" />
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="library.book_view_search" model="ir.ui.view">
      <field name="name">library.book.view.search</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <search string="Search books">
          <field name="title" />
          <field name="author" />
          <field name="genre" />
          <field name="publisher" />
          <field name="published" />
          <field name="isbn" />
        </search>
      </field>
    </record>

    <record id="library.book_view_tree" model="ir.ui.view">
      <field name="name">library.book.view.tree</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <tree string="Books">
          <field name="title" />
          <field name="author" />
          <field name="genre" />
          <field name="publisher" />
          <field name="published" />
          <field name="isbn" />
        </tree>
      </field>
    </record>
  </data>
</odoo>