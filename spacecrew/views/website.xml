<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mission_listing">
            <t t-call="website.layout">
                <t t-set="title">Missions</t>
                <div class="oe_structure">
                    <div class="container">
                        <h1>Missions</h1>
                        <t t-foreach="missions" t-as="mission">
                            <h3>
                                <t t-esc="mission.id" />
                                <t t-esc="mission.name" />
                            </h3>
                            <p>
                                Launch Date:
                                <span t-field="mission.launch_date" />
                            </p>
                            <p>
                                Return Date:
                                <span t-field="mission.return_date" />
                            </p>
                            <p>
                                Fuel Required:
                                <span t-field="mission.fuel_required" />
                            </p>
                            <p>
                                Engines:
                                <span t-field="mission.engines" />
                            </p>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>